@model Peluqueria.Models.Turno

@{
    ViewData["Title"] = "Edit";
}
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json


@{
    var usuarioLogueado = Context.Session.GetString("Usuario");
    var usuario = JsonConvert.DeserializeObject<Usuario>(usuarioLogueado);
}
<h1>Edit</h1>

<h4>Turno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FechaHora" class="control-label"></label>
                <input asp-for="FechaHora" class="form-control" />
                <span asp-validation-for="FechaHora" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Atendido" /> @Html.DisplayNameFor(model => model.Atendido)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ServicioId" class="control-label"></label>
                <select asp-for="ServicioId" class="form-control" asp-items="ViewBag.ServicioId"></select>
                <span asp-validation-for="ServicioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (usuario.Rol == Rol.PELUQUERO || usuario.Rol == Rol.CLIENTE)
    {

        <a asp-action="IndexTurno" asp-route-id="@usuario.Id" asp-route-rol="@usuario.Rol">Back to List</a>
    }
    else
    {
        <a asp-action="Index">Back to List</a>
    }

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
